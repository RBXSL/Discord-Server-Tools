import discord
from discord.ext import commands, tasks
import asyncio

# ================= CONFIG =================
BOT_TOKEN = "BOT_TOKEN_HERE"
GUILD_ID = 1234567890123456789       # Target server
CHANNEL_IDS = []                     # Optional: filter by channel IDs; empty = all channels
SEND_TO_ALL_CHANNELS = True          # If True, send NUM_MESSAGES to all webhooks in all channels every batch
CYCLE_CHANNELS = False               # If True, send 1 message per webhook per batch, cycling through channels
LOOP = True                          # Infinite loop
NUM_MESSAGES = 3                      # Messages per webhook per batch
BATCH_DELAY = 5                        # Seconds to wait between batches
BATCH_AMOUNT = 5                       # Ignored if LOOP=True
MESSAGE_CONTENT = "@everyone, this is a test message"
# ==========================================

intents = discord.Intents.default()
intents.guilds = True
intents.messages = True
intents.message_content = True
bot = commands.Bot(command_prefix="!", intents=intents)

@bot.event
async def on_ready():
    print(f"Bot online as {bot.user}")
    send_messages.start()  # Start the loop task

async def fetch_webhooks():
    guild = bot.get_guild(GUILD_ID)
    if not guild:
        print("❌ Guild not found")
        return []

    webhooks = await guild.webhooks()
    if CHANNEL_IDS:
        webhooks = [w for w in webhooks if w.channel.id in CHANNEL_IDS]

    return webhooks

@tasks.loop(seconds=BATCH_DELAY)
async def send_messages():
    batch_count = 0
    webhooks = await fetch_webhooks()
    if not webhooks:
        print("❌ No webhooks found in the server.")
        return

    while LOOP or batch_count < BATCH_AMOUNT:
        if SEND_TO_ALL_CHANNELS:
            # Send NUM_MESSAGES through every webhook in all allowed channels
            for w in webhooks:
                for _ in range(NUM_MESSAGES):
                    try:
                        await w.send(MESSAGE_CONTENT)
                        print(f"[+] Sent message via {w.name} in channel {w.channel.name}")
                    except discord.Forbidden:
                        print(f"❌ Missing permission for webhook {w.name}")
                    except discord.HTTPException as e:
                        print(f"[!] Error sending via {w.name}: {e}")

        if CYCLE_CHANNELS:
            # Send 1 message per webhook per batch, cycling through channels
            for w in webhooks:
                try:
                    await w.send(MESSAGE_CONTENT)
                    print(f"[+] Cycled message via {w.name} in channel {w.channel.name}")
                except discord.Forbidden:
                    print(f"❌ Missing permission for webhook {w.name}")
                except discord.HTTPException as e:
                    print(f"[!] Error sending via {w.name}: {e}")

        batch_count += 1
        print(f"Batch {batch_count} completed. Waiting {BATCH_DELAY}s...")
        await asyncio.sleep(BATCH_DELAY)

bot.run(BOT_TOKEN)
